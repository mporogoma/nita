<%= form_with(model: daily_sale) do |form| %>
  <% if daily_sale.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(daily_sale.errors.count, "error") %> prohibited this daily_sale from being saved:</h2>

      <ul>
        <% daily_sale.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-6">
    <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
      <div class="sm:col-span-3">
        <%= form.label :product_id, class: "block text-sm font-medium text-gray-700" %>
        <%= form.collection_select :product_id, Product.all, :id, :name_with_stock, { prompt: "Select Product" }, { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500 sm:text-sm" } %>
      </div>

      <div class="sm:col-span-3">
        <%= form.label :date, class: "block text-sm font-medium text-gray-700" %>
        <%= form.date_field :date, value: Date.today, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500 sm:text-sm" %>
      </div>

      <div class="sm:col-span-2">
        <%= form.label :quantity_sold, class: "block text-sm font-medium text-gray-700" %>
        <%= form.number_field :quantity_sold, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-red-500 focus:ring-red-500 sm:text-sm" %>
      </div>
    </div>

    <div class="flex justify-end">
      <%= link_to "Cancel", daily_sales_path, class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
      <%= form.submit "Record Sale", class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-800 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
    </div>
  </div>
<% end %>