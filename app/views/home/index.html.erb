<!-- app/views/home/index.html.erb -->
<div class="min-h-screen bg-gradient-to-br from-red-50 to-gray-50">
  <!-- Navigation -->
  <nav class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex items-center">
          <div class="flex-shrink-0 flex items-center">
            <%= image_tag "nita_logo.png", alt: "Logo", class: "h-8 w-8" %>
            <span class="ml-2 text-xl font-bold text-gray-900">Nita Nation</span>
          </div>
        </div>
        <div class="flex items-center space-x-4">
          <%= link_to "Log in", new_user_session_path, class: "text-red-600 hover:text-red-800 px-3 py-2 text-sm font-medium" %>
          <%= link_to "Sign up", new_user_registration_path, class: "bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-md text-sm font-medium" %>
        </div>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="text-center">
      <h1 class="text-4xl tracking-tight font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
        <span class="block">Streamline Your</span>
        <span class="block text-red-600">Sales & Inventory</span>
      </h1>
      <p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
        Powerful yet simple inventory management and sales tracking for your business. Get real-time insights and control over your stock.
      </p>
      <div class="mt-8 flex justify-center space-x-4">
        <%= link_to "Get Started", new_user_registration_path, class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700" %>
        <%= link_to "Learn More", "#features", class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-red-700 bg-red-100 hover:bg-red-200" %>
      </div>
    </div>
  </main>

  <!-- Features Section -->
  <div id="features" class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="lg:text-center">
        <h2 class="text-base text-red-600 font-semibold tracking-wide uppercase">Features</h2>
        <p class="mt-2 text-3xl leading-8 font-extrabold tracking-tight text-gray-900 sm:text-4xl">
          Everything you need to manage your sales
        </p>
      </div>

      <div class="mt-16">
        <div class="space-y-10 md:space-y-0 md:grid md:grid-cols-3 md:gap-x-8 md:gap-y-10">
          <!-- Feature 1 -->
          <div class="relative">
            <div class="absolute flex items-center justify-center h-12 w-12 rounded-md bg-red-500 text-white">
              <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
            </div>
            <div class="ml-16">
              <h3 class="text-lg leading-6 font-medium text-gray-900">Sales Tracking</h3>
              <p class="mt-2 text-base text-gray-500">
                Record and monitor all your sales transactions with detailed reporting and analytics.
              </p>
            </div>
          </div>

          <!-- Feature 2 -->
          <div class="relative">
            <div class="absolute flex items-center justify-center h-12 w-12 rounded-md bg-red-500 text-white">
              <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
              </svg>
            </div>
            <div class="ml-16">
              <h3 class="text-lg leading-6 font-medium text-gray-900">Inventory Management</h3>
              <p class="mt-2 text-base text-gray-500">
                Keep track of your stock levels and get alerts when items are running low.
              </p>
            </div>
          </div>

          <!-- Feature 3 -->
          <div class="relative">
            <div class="absolute flex items-center justify-center h-12 w-12 rounded-md bg-red-500 text-white">
              <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
              </svg>
            </div>
            <div class="ml-16">
              <h3 class="text-lg leading-6 font-medium text-gray-900">Profit Analysis</h3>
              <p class="mt-2 text-base text-gray-500">
                Automatically calculate profits and view trends to make better business decisions.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- CTA Section -->
  <div class="bg-red-700">
    <div class="max-w-2xl mx-auto text-center py-16 px-4 sm:py-20 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-extrabold text-white sm:text-4xl">
        <span class="block">Ready to take control of your sales?</span>
      </h2>
      <p class="mt-4 text-lg leading-6 text-red-100">
        Start managing your inventory and sales like a pro with our simple yet powerful tools.
      </p>
      <%= link_to "Get Started for Free", new_user_registration_path, class: "mt-8 w-full inline-flex items-center justify-center px-5 py-3 border border-transparent text-base font-medium rounded-md text-red-600 bg-white hover:bg-red-50 sm:w-auto" %>
    </div>
  </div>

  <!-- Footer -->
  <footer class="bg-white">
    <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
      <div class="border-t border-gray-200 pt-8 flex justify-between">
        <p class="text-base text-gray-400">
          &copy; <%= Time.current.year %> Nita Nation. All rights reserved.
        </p>
        <div class="flex space-x-6">
          <a href="#" class="text-gray-400 hover:text-gray-500">
            <span class="sr-only">Twitter</span>
