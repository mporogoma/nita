<% flash.each do |type, message| %>
  <% alert_type = case type.to_sym
                  when :notice then "success"
                  when :alert, :error then "error"
                  else type
                  end %>
  
  <div class="fixed inset-x-0 top-0 flex items-center justify-center px-4 py-3 pointer-events-none sm:p-6 sm:items-start sm:justify-end z-50">
    <div data-controller="flash" data-transition-enter-from="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95" data-transition-enter-to="opacity-100 translate-y-0 sm:scale-100" data-transition-leave-from="opacity-100 translate-y-0 sm:scale-100" data-transition-leave-to="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95" class="max-w-sm w-full bg-<%= alert_type == 'error' ? 'red' : 'green' %>-50 shadow-lg rounded-lg pointer-events-auto">
      <div class="rounded-lg shadow-xs overflow-hidden">
        <div class="p-4">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-<%= alert_type == 'error' ? 'red' : 'green' %>-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <% if alert_type == 'error' %>
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                <% else %>
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                <% end %>
              </svg>
            </div>
            <div class="ml-3 w-0 flex-1 pt-0.5">
              <p class="text-sm font-medium text-<%= alert_type == 'error' ? 'red' : 'green' %>-800">
                <%= message %>
              </p>
            </div>
            <div class="ml-4 flex-shrink-0 flex">
              <button class="inline-flex text-<%= alert_type == 'error' ? 'red' : 'green' %>-400 hover:text-<%= alert_type == 'error' ? 'red' : 'green' %>-500 focus:outline-none" data-action="flash#dismiss">
                <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>