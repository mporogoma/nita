<div id="<%= dom_id product %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= product.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Size:</strong>
    <%= product.size %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Quantity:</strong>
    <%= product.quantity %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Purchase price:</strong>
    <%= product.purchase_price %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Selling price:</strong>
    <%= product.selling_price %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Profit:</strong>
    <%= product.profit %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Category:</strong>
    <%= product.category_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Low stock threshold:</strong>
    <%= product.low_stock_threshold %>
  </div>
</div>
